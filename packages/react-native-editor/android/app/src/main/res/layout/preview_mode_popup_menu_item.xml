<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/menu_item_margin"
    android:paddingEnd="@dimen/menu_item_margin">

    <com.gutenberg.WPTextView
        android:id="@+id/preview_mode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_toStartOf="@+id/checkmark"
        android:textAppearance="?textAppearanceSmallPopupMenu"
        tools:text="@string/web_preview_default"
        tools:textColor="?attr/colorPrimary" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_checkmark_white_24dp"
        app:tint="?attr/colorPrimary" />

</RelativeLayout>
