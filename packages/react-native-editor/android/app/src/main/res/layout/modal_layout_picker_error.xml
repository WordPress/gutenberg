    android:id="@+id/errorLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mlp_layouts_row_height"
    android:background="?attr/layoutPickerBackground">

    <org.wordpress.android.ui.ActionableEmptyView
