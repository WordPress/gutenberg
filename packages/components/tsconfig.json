{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"declarationDir": "build-types",
		"types": [ "gutenberg-env" ]
	},
	"references": [
		{ "path": "../deprecated" },
		{ "path": "../element" },
		{ "path": "../hooks" },
		{ "path": "../primitives" }
	],
	"include": [
		"src/animate/**/*",
		"src/base-control/**/*",
		"src/dashicon/**/*",
		"src/tip/**/*",
		"src/truncate/**/*",
		"src/utils/**/*",
		"src/view/**/*",
		"src/visually-hidden/**/*",
		"src/text/**/*",
		"src/grid/**/*",
		"src/__next/**/*"
	],
	"exclude": [
		"src/**/*.android.js",
		"src/**/*.ios.js",
		"src/**/*.native.js",
		"src/**/react-native-*",
		"src/**/stories",
		"src/**/test"
	]
}
